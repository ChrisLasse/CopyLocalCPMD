#CPQA INCLUDE two-water.g96
#CPQA INCLUDE two-water_solvent.inp
#CPQA INCLUDE two-water_solvent.top

&CPMD
  USE_CUFFT 
  FFT_N_STREAMS_PER_DEVICE
  2
  FFT_N_DEVICES_PER_TASK
  1
  USE_CUBLAS
  BLAS_N_STREAMS_PER_DEVICE
  2
  BLAS_N_DEVICES_PER_TASK
  1
  QMMM
  
  OPTIMIZE WAVEFUNCTION

  PRINT FORCES ON

  ISOLATED MOLECULE
  CENTER MOLECULE

  MAXITER
  5

&END

&DFT
  NEWCODE
  FUNCTIONAL BLYP
&END

&QMMM
  NOSPLIT
  TOPOLOGY
   ./two-water_solvent.top
  COORDINATES
   ./two-water.g96
  INPUT
   ./two-water_solvent.inp
  LONG RANGE ELECTROSTATIC COUPLING
  RCUT_NN
   15.0              
  RCUT_ESP
   15.0 
  UPDATE LIST
   100  

 ARRAYSIZES
 MAXATT 55
 MAXAA2 11
 MAXNRP 13
 MAXNBT 60
 MAXBNH 13
 MAXBON 10
 MAXTTY 59
 MXQHEH 10
 MAXTH  10
 MAXQTY 13
 MAXHIH 10
 MAXQHI 10
 MAXPTY 32
 MXPHIH 10
 MAXPHI 10
 MAXCAG 11
 MAXAEX 20003
 MXEX14 10
 END ARRAYSIZES

&END
&SYSTEM
  POISSON SOLVER HOCKNEY
  SYMMETRY
  0
  CELL
  15.0  1.0  1.0  0  0  0
  CUTOFF
  30.0
&END

&ATOMS
*O_MT_BLYP.psp      KLEINMAN-BYLANDER
   LMAX=P
   1
   1 
*H_MT_BLYP.psp
   LMAX=S
   2
   2 3  
&END

